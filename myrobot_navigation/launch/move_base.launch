<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>
  <arg name="scan_topic"  default="/er_robot/laser/scan" />
  <arg name="base_frame_id"  default="base_footprint"/>
  <arg name="odom_frame_id"  default="odom"/>
  <arg name="global_frame_id" default="map"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" /> 
    <param name="base_global_planner" value="hybrid_a_star/HybridAStarROS" /> 
    <!-- <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" /> -->
    <rosparam file="$(find myrobot_navigation)/param/common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find myrobot_navigation)/param/common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find myrobot_navigation)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find myrobot_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find myrobot_navigation)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find myrobot_navigation)/param/dwa_local_planner_params.yaml" command="load" />
    <!-- <rosparam file="$(find myrobot_navigation)/param/global_planner_params.yaml" command="load" /> -->
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="scan" to="$(arg scan_topic)"/>
    <!-- <param name="HybridPlannerROS/min_vel_x" value="0.8" if="$(arg move_forward_only)" /> -->
    <param name="DWAPlannerROS/min_vel_x" value="0.8" if="$(arg move_forward_only)" />

    <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>

  </node>
</launch>